@model RojgarMantra.Models.CountryAdd

@{
    ViewBag.Title = "ManageCountryDetails";
}

<div class="main-content-header container-fluid p-4">
   
</div>
<div class="card">
    <div class="card-body" style="overflow:auto">
      
            
           
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                           
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.DisplayName("Country Name")
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary" />

                                </div>
                            </div>
                        </div>
                       


                    }
            
           
        
                </div>
    

            </div>
