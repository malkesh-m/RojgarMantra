<html>
<head>
    <style>
        .container {
           
            position: absolute;
            top: 50%;
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 1000px;
            margin: auto;
            text-align:end;
            font-family: arial;
            color:black;
            background-color:white;
        }
           .h4{
               position: center;
               
               align-content:center;
           }
       

        
    </style>
</head>
<body>
    @*<header>SmtpDetails</header>*@




    @model RojgarMantra.Models.SmtpDetails



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">

            <h4 class="h4">SmtpDetails</h4>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">SMTP ID</label>

                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Smtpid, new { @class = "form-control" })
                    @Html.EditorFor(model => model.Smtpid, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Smtpid, "", new { @class = "text-danger" })
                    @*@Html.DisplayFor(model=>model.Smtpid)*@


                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">SMTP Host</label>

                <div class="col-md-6">
                    @Html.EditorFor(model => model.Host, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Host, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">SMTP Username</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">SMTP Password</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">SMTP Port</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Port, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Port, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sender Name</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sender Email Id</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Emailid, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emailid, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <center>
                        <button class="btn btn-primary" id="btn_back">Back</button>
                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                    </center>

                </div>
            </div>
        </div>







    }
   
</body>
</html>





